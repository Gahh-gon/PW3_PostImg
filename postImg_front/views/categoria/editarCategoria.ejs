<body>
    
    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card mt-2">
            <div class="card-header">EDIÇÃO DE CATEGORIAS</div>
        </div>

        <div class="card-body">
            <form action="http://localhost:3001/alterarCategoria" method="post">
                
                <label for="">CATEGORIA</label>

                <input
                    type="hidden"
                    name="cod_categoria" id="cod_categoria"
                    value="<%= categoria.cod_categoria %>"/>

                <input type="text" class="form-control" 
                        name="nomeCategoria" id="nomeCategoria"
                        placeholder="DIGITE UMA CATEGORIA"
                        value="<%= categoria.nomeCategoria %>">
                
                <button class="btn btn-warning  mt-2">EDITAR</button>
            </form>
        </div>
    </div>

